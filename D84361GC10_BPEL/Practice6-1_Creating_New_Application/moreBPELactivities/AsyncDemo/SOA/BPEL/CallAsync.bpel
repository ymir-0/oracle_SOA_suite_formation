<process name="CallAsync"
               targetNamespace="http://xmlns.oracle.com/moreBPELactivities/AsyncDemo/CallAsync"
               xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
               xmlns:client="http://xmlns.oracle.com/moreBPELactivities/AsyncDemo/CallAsync"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:ui="http://xmlns.oracle.com/soa/designer"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:ns1="http://xmlns.oracle.com/moreBPELactivities/AsyncDemo/AsyncProcess"
         xmlns:ns2="http://www.example.org/ns/asyncdemo"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions" xmlns:ess="http://xmlns.oracle.com/scheduler"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap">

    <import ui:processWSDL="true" namespace="http://xmlns.oracle.com/moreBPELactivities/AsyncDemo/CallAsync" location="../WSDLs/CallAsync.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="callasync_client" partnerLinkType="client:CallAsync" myRole="CallAsyncProvider"/>
    <partnerLink name="AsyncProcess.asyncprocess_client" partnerLinkType="ns1:AsyncProcess"
                 partnerRole="AsyncProcessProvider" myRole="AsyncProcessRequester"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:CallAsyncRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:CallAsyncResponseMessage"/>
    <variable name="Invoke1_process_InputVariable" messageType="ns1:AsyncProcessRequestMessage"/>
    <variable name="OnMessage_processResponse_InputVariable" messageType="ns1:AsyncProcessResponseMessage"/>
    <variable name="Invoke_Async_process_InputVariable" messageType="ns1:AsyncProcessRequestMessage"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in CallAsync.wsdl) -->
    <receive name="receiveInput" partnerLink="callasync_client" portType="client:CallAsync" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Assign_Async">
      <copy>
        <from>$inputVariable.payload</from>
        <to>$Invoke_Async_process_InputVariable.payload</to>
      </copy>
      <copy>
        <from>$inputVariable.payload</from>
        <to>$Invoke1_process_InputVariable.payload</to>
      </copy>
    </assign>
    <invoke name="Invoke_Async" bpelx:invokeAsDetail="no" partnerLink="AsyncProcess.asyncprocess_client"
            portType="ns1:AsyncProcess" operation="process" inputVariable="Invoke1_process_InputVariable"/>
    <pick name="Pick_Operation">
      <onMessage variable="OnMessage_processResponse_InputVariable" partnerLink="AsyncProcess.asyncprocess_client"
                 portType="ns1:AsyncProcessCallback" operation="processResponse">
        <assign name="Assign_Message">
          <copy>
            <from>$OnMessage_processResponse_InputVariable.payload</from>
            <to>$outputVariable.payload</to>
          </copy>
        </assign>
      </onMessage>
      <onAlarm>
        <for>'PT10S'</for>
        <assign name="Assign_Timeout">
          <copy>
            <from>'timeout'</from>
            <to>$outputVariable.payload</to>
          </copy>
        </assign>
      </onAlarm>
    </pick>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="callasync_client" portType="client:CallAsync" operation="process" variable="outputVariable"/>
  </sequence>
</process>